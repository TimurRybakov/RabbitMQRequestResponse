{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "adapter-route": {
        "ClusterId": "adapter-cluster",
        "Match": {
          "Path": "/adapter/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/adapter" }
        ]
      }
    },
    "Clusters": {
      "adapter-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "https://adapter-1"
          },
          "destination2": {
            "Address": "https://adapter-2"
          }
        }
      }
    }
  }
}
